{
  "extends": "airbnb-base",
  "env": {
    "mocha": true
  },
  "globals": {
    "assert": true,
    "sandbox": true,
    "sinon": true,
    "spy": true,
    "stub": true
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["test/**/*.js", "src/**/*.spec.js"]}],
    "import/no-unresolved": [2, {"caseSensitive": false}],
    "no-underscore-dangle": "off"
  }
}
